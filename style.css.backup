/* ================================
   CSS VARIABLES & RESET
   ================================ */
:root {
    /* Brand Colors */
    --primary-blue: #A7D4FF;
    --secondary-white: #FFFFFF;
    --accent-dark: #0A3D62;
    --light-blue: #E8F4FF;
    --mid-blue: #5BA3D0;

    /* Gradients */
    --gradient-primary: linear-gradient(135deg, #A7D4FF 0%, #7FB8F0 100%);
    --gradient-accent: linear-gradient(135deg, #0A3D62 0%, #05293F 100%);

    /* Typography */
    --font-display: 'Orbitron', sans-serif;
    --font-body: 'Inter', sans-serif;

    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 2rem;
    --spacing-lg: 4rem;
    --spacing-xl: 6rem;

    /* Shadows */
    --shadow-sm: 0 2px 8px rgba(10, 61, 98, 0.08);
    --shadow-md: 0 4px 16px rgba(10, 61, 98, 0.12);
    --shadow-lg: 0 8px 32px rgba(10, 61, 98, 0.16);
    --shadow-glow: 0 0 40px rgba(167, 212, 255, 0.4);

    /* Border Radius */
    --radius-sm: 8px;
    --radius-md: 16px;
    --radius-lg: 24px;
    --radius-full: 9999px;

    /* Transitions */
    --transition-base: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-fast: all 0.15s ease;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: var(--font-body);
    color: var(--accent-dark);
    background-color: var(--secondary-white);
    line-height: 1.6;
    overflow-x: hidden;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
}

a {
    text-decoration: none;
    color: inherit;
    transition: var(--transition-base);
}

ul {
    list-style: none;
}

/* ================================
   UTILITY CLASSES
   ================================ */
.container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
}

.gradient-text {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.section-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    text-align: center;
    margin-bottom: var(--spacing-sm);
    color: var(--accent-dark);
}

.section-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    text-align: center;
    color: var(--mid-blue);
    margin-bottom: var(--spacing-lg);
    font-weight: 300;
}

/* ================================
   BUTTONS
   ================================ */
.btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    border-radius: var(--radius-full);
    font-family: var(--font-display);
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: var(--transition-base);
    border: 2px solid transparent;
    text-align: center;
}

.btn-primary {
    background: var(--gradient-primary);
    color: var(--accent-dark);
    box-shadow: var(--shadow-md);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg), var(--shadow-glow);
}

.btn-hero {
    background: var(--gradient-accent);
    color: var(--secondary-white);
    padding: 1.25rem 3rem;
    font-size: 1.125rem;
    box-shadow: var(--shadow-lg);
}

.btn-hero:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 40px rgba(10, 61, 98, 0.3);
}

.btn-cta {
    background: var(--gradient-primary);
    color: var(--accent-dark);
    padding: 1.5rem 4rem;
    font-size: 1.25rem;
    font-weight: 700;
    box-shadow: var(--shadow-lg);
}

.btn-cta:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: var(--shadow-lg), var(--shadow-glow);
}

/* ================================
   NAVIGATION
   ================================ */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    box-shadow: var(--shadow-sm);
    z-index: 1000;
    padding: 1rem 0;
}

.nav-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-md);
}

.logo {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 900;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: 1px;
}

.nav-links {
    display: flex;
    gap: var(--spacing-md);
    align-items: center;
}

.nav-links a {
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--accent-dark);
    letter-spacing: 0.5px;
    position: relative;
}

.nav-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--gradient-primary);
    transition: var(--transition-base);
}

.nav-links a:hover::after {
    width: 100%;
}

/* ================================
   HERO SECTION
   ================================ */
.hero {
    padding: calc(80px + var(--spacing-xl)) 0 var(--spacing-xl);
    background: linear-gradient(180deg, var(--light-blue) 0%, var(--secondary-white) 100%);
    position: relative;
    overflow: hidden;
}

.hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(167, 212, 255, 0.15) 0%, transparent 70%);
    border-radius: 50%;
}

.hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-lg);
    align-items: center;
    position: relative;
    z-index: 1;
}

.hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: var(--spacing-md);
    letter-spacing: -1px;
}

.hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    color: var(--mid-blue);
    margin-bottom: var(--spacing-md);
    font-weight: 300;
}

.hero-benefits {
    margin-bottom: var(--spacing-md);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.hero-benefits li {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 1.125rem;
    color: var(--accent-dark);
}

.check-icon {
    width: 24px;
    height: 24px;
    stroke: var(--primary-blue);
    flex-shrink: 0;
}

.hero-image {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}

.product-glow {
    position: absolute;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(167, 212, 255, 0.3) 0%, transparent 70%);
    border-radius: 50%;
    animation: pulse 3s ease-in-out infinite;
}

@keyframes pulse {

    0%,
    100% {
        transform: scale(1);
        opacity: 0.3;
    }

    50% {
        transform: scale(1.1);
        opacity: 0.5;
    }
}

.hero-image img {
    position: relative;
    z-index: 1;
    max-width: 500px;
    filter: drop-shadow(var(--shadow-lg));
    animation: float 6s ease-in-out infinite;
}

@keyframes float {

    0%,
    100% {
        transform: translateY(0px);
    }

    50% {
        transform: translateY(-20px);
    }
}

/* ================================
   FEATURES SECTION
   ================================ */
.features {
    padding: var(--spacing-xl) 0;
    background: var(--secondary-white);
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-md);
}

.feature-card {
    background: var(--secondary-white);
    border: 2px solid var(--light-blue);
    border-radius: var(--radius-md);
    padding: var(--spacing-md);
    text-align: center;
    transition: var(--transition-base);
}

.feature-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary-blue);
}

.feature-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--spacing-md);
    padding: var(--spacing-sm);
    background: var(--gradient-primary);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
}

.feature-icon svg {
    width: 32px;
    height: 32px;
    stroke: var(--accent-dark);
    stroke-width: 2;
}

.feature-card h3 {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: var(--spacing-sm);
    color: var(--accent-dark);
}

.feature-card p {
    color: var(--mid-blue);
    line-height: 1.6;
}

/* ================================
   SPECS SECTION
   ================================ */
.specs {
    padding: var(--spacing-xl) 0;
    background: var(--light-blue);
}

.specs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
    max-width: 900px;
    margin: 0 auto;
}

.spec-item {
    background: var(--secondary-white);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    text-align: center;
    box-shadow: var(--shadow-sm);
    transition: var(--transition-base);
}

.spec-item:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
}

.spec-label {
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--mid-blue);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: var(--spacing-xs);
}

.spec-value {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--accent-dark);
}

/* ================================
   COLORS SECTION
   ================================ */
.colors {
    padding: var(--spacing-xl) 0;
    background: var(--secondary-white);
}

.color-swatches {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
}

.color-swatch {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
    cursor: pointer;
    transition: var(--transition-base);
}

.color-swatch:hover {
    transform: translateY(-4px);
}

.swatch {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    box-shadow: var(--shadow-md);
    transition: var(--transition-base);
    border: 4px solid transparent;
}

.color-swatch.active .swatch,
.color-swatch:hover .swatch {
    border-color: var(--accent-dark);
    box-shadow: var(--shadow-lg), var(--shadow-glow);
    transform: scale(1.1);
}

.color-swatch span {
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--accent-dark);
}

/* ================================
   LIFESTYLE SECTION
   ================================ */
.lifestyle {
    padding: var(--spacing-xl) 0;
    background: var(--light-blue);
}

.lifestyle-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-md);
}

.lifestyle-card {
    position: relative;
    border-radius: var(--radius-md);
    overflow: hidden;
    aspect-ratio: 1;
    cursor: pointer;
    box-shadow: var(--shadow-md);
    transition: var(--transition-base);
}

.lifestyle-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
}

.lifestyle-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition-base);
}

.lifestyle-card:hover img {
    transform: scale(1.05);
}

.lifestyle-label {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(10, 61, 98, 0.9), transparent);
    padding: var(--spacing-md);
    transform: translateY(100%);
    transition: var(--transition-base);
}

.lifestyle-card:hover .lifestyle-label {
    transform: translateY(0);
}

.lifestyle-label h3 {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--secondary-white);
}

/* ================================
   REVIEWS SECTION
   ================================ */
.reviews {
    padding: var(--spacing-xl) 0;
    background: var(--secondary-white);
}

.reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-md);
}

.review-card {
    background: var(--light-blue);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
    transition: var(--transition-base);
}

.review-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
}

.stars {
    display: flex;
    gap: 4px;
    margin-bottom: var(--spacing-sm);
}

.star {
    color: var(--primary-blue);
    font-size: 1.25rem;
}

.review-text {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--accent-dark);
    margin-bottom: var(--spacing-md);
    font-style: italic;
}

.reviewer {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.reviewer strong {
    font-family: var(--font-display);
    font-weight: 700;
    color: var(--accent-dark);
}

.reviewer span {
    font-size: 0.875rem;
    color: var(--mid-blue);
}

/* ================================
   FAQ SECTION
   ================================ */
.faq {
    padding: var(--spacing-xl) 0;
    background: var(--light-blue);
}

.faq-list {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.faq-item {
    background: var(--secondary-white);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
}

.faq-toggle {
    display: none;
}

.faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-md);
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--accent-dark);
    cursor: pointer;
    transition: var(--transition-base);
}

.faq-question:hover {
    background: var(--light-blue);
}

.faq-arrow {
    font-size: 1.5rem;
    color: var(--primary-blue);
    transition: var(--transition-base);
}

.faq-toggle:checked+.faq-question .faq-arrow {
    transform: rotate(90deg);
}

.faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
}

.faq-toggle:checked~.faq-answer {
    max-height: 500px;
}

.faq-answer p {
    padding: 0 var(--spacing-md) var(--spacing-md);
    color: var(--mid-blue);
    line-height: 1.7;
}

/* ================================
   FINAL CTA SECTION
   ================================ */
.final-cta {
    padding: var(--spacing-xl) 0;
    background: var(--gradient-accent);
    color: var(--secondary-white);
    text-align: center;
}

.cta-content h2 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    margin-bottom: var(--spacing-md);
    color: var(--secondary-white);
}

.cta-benefits {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
    flex-wrap: wrap;
}

.cta-benefits li {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 1.125rem;
    color: var(--light-blue);
}

.cta-benefits .check-icon {
    stroke: var(--primary-blue);
}

.trust-badges {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
    flex-wrap: wrap;
}

.badge {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-full);
    backdrop-filter: blur(8px);
}

.badge svg {
    width: 24px;
    height: 24px;
    stroke: var(--primary-blue);
}

.badge span {
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--light-blue);
}

/* ================================
   FOOTER
   ================================ */
.footer {
    padding: var(--spacing-lg) 0 var(--spacing-md);
    background: var(--accent-dark);
    color: var(--light-blue);
}

.footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
}

.footer-logo {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 900;
    color: var(--primary-blue);
    margin-bottom: var(--spacing-sm);
}

.footer-tagline {
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--light-blue);
}

.footer-section h4 {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 700;
    color: var(--secondary-white);
    margin-bottom: var(--spacing-sm);
}

.footer-section ul {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
}

.footer-section a {
    font-size: 0.875rem;
    color: var(--light-blue);
    transition: var(--transition-fast);
}

.footer-section a:hover {
    color: var(--primary-blue);
    padding-left: 4px;
}

.footer-bottom {
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(167, 212, 255, 0.2);
    text-align: center;
}

.footer-bottom p {
    font-size: 0.875rem;
    color: var(--light-blue);
}

/* ================================
   RESPONSIVE DESIGN
   ================================ */
@media (max-width: 1024px) {
    .nav-links {
        gap: var(--spacing-sm);
    }

    .nav-links a {
        font-size: 0.75rem;
    }
}

@media (max-width: 768px) {
    .nav-links {
        display: none;
    }

    .hero-content {
        grid-template-columns: 1fr;
        text-align: center;
    }

    .hero-text {
        order: 2;
    }

    .hero-image {
        order: 1;
    }

    .hero-benefits {
        align-items: center;
    }

    .features-grid,
    .specs-grid,
    .reviews-grid,
    .lifestyle-grid {
        grid-template-columns: 1fr;
    }

    .cta-benefits {
        flex-direction: column;
        align-items: center;
    }

    .trust-badges {
        flex-direction: column;
    }
}

@media (max-width: 480px) {
    :root {
        --spacing-md: 1.5rem;
        --spacing-lg: 3rem;
        --spacing-xl: 4rem;
    }

    .btn {
        padding: 0.875rem 2rem;
        font-size: 0.875rem;
    }

    .btn-hero,
    .btn-cta {
        padding: 1rem 2rem;
        font-size: 1rem;
    }

    .color-swatches {
        gap: var(--spacing-sm);
    }

    .swatch {
        width: 60px;
        height: 60px;
    }
}